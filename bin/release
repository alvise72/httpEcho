#!/usr/bin/env bash
# bin/release <build-dir>

cat <<EOF
---
config_vars:
  PATH: /app/jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_HOME: /app/jdk
  JRE_HOME: /app/jdk
  CATALINA_HOME: /app/tomcat
  JAVA_OPTS: -Djava.io.tmpdir=/tmp  -Dalpha=bravo -Xmx384m -Xss512k -XX:+UseCompressedOops -Xmx382293 -Xms382293K -XX:MaxPermSize=64M -XX:PermSize=64M -Xss995K -Dhttp.port=$PORT
default_process_types:
  web: /app/tomcat/bin/catalina.sh run
EOF

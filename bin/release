#!/usr/bin/env bash
# bin/release <build-dir>

cat <<EOF
---
config_vars:
  PATH: $PWD/jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_HOME: $PWD/jdk
  JRE_HOME: $PWD/jdk
  CATALINA_HOME: $PWD/tomcat
  JAVA_OPTS: -Djava.io.tmpdir=$TMPDIR  -Dalpha=bravo -Xmx384m -Xss512k -XX:+UseCompressedOops -Xmx382293 -Xms382293K -XX:MaxPermSize=64M -XX:PermSize=64M -Xss995K -Dhttp.port=$PORT
default_process_types:
  web: JAVA_HOME=$PWD/jdk $PWD/tomcat/bin/catalina.sh run
EOF

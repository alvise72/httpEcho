#!/usr/bin/env bash
# bin/release <build-dir>
#$BUILD_DIR = $1

cat <<EOF
---
config_vars:
  PATH: $1/jdk/bin:/usr/local/bin:/usr/bin:/bin
  JAVA_HOME: $1/jdk
  JRE_HOME: $1/jdk
  CATALINA_HOME: $1/tomcat
  JAVA_OPTS: -Djava.io.tmpdir=$1  -Dalpha=bravo -Xmx384m -Xss512k -XX:+UseCompressedOops -Xmx382293 -Xms382293K -XX:MaxPermSize=64M -XX:PermSize=64M -Xss995K -Dhttp.port=$PORT
default_process_types:
  web: $CATALINA_HOME/bin/catalina.sh start
EOF
